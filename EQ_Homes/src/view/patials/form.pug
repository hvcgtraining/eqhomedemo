    .sidebar__widget
        h3.widget__title Tính lãi suất ngân hàng
        .widget__content
            p.rate Tìm lãi suất ngân hàng
            .form-group
                .form-check.form-check-inline
                    input.form-check-input(type="radio" name="rate" value="vnd" checked)
                    span.pr-3 VND
                    input.form-check-input(type="radio" name="rate" value="usd")
                    span USD
            .form-group.row
                .col-xl-4
                    label Ngân hàng
                .col-xl-8
                    select.form-control
                        option(value="0") Chọn ngân hàng
                        option(value="1") AGRIBANK
                        option(value="2") SHB
                        option(value="3") MB
                        option(value="4") VIETTINBANK
                        option(value="5") TECHCOMBANK
            .form-group.row
                .col-xl-4
                    label Kỳ hạn
                .col-xl-8
                    select.form-control
                        option(value="0") Chọn kì hạn
                        option(value="1") Không kì hạn
                        option(value="2") 1 tháng
                        option(value="3") 3 tháng
                        option(value="4") 6 tháng
                        option(value="5") 9 tháng
                        option(value="6") 12 tháng
                        option(value="7") 24 tháng
            .form-group.row
                .col-xl-4
                    label Lãi suất
                .col-xl-8
                    input.form-control(type="text")
            p.rate Tính lãi suất
            p.lead Bảng này giúp bạn tính toán số tiền cần phải trả khi vay ngân hàng để mua nhà trả góp.
            .form-group.row
                .col-xl-4
                    label Số tiền vay (VND)
                .col-xl-8
                    input.form-control(type="number" maxlength="12")
            .form-group.row
                .col-xl-4
                    label Thời gian vay
                .col-xl-4
                    input.form-control(type="number")
                .col-xl-4
                    select.form-control
                        option(value="0") Tháng
                        option(value="0") Năm
            .form-group.row
                .col-xl-4
                    label Lãi suất
                .col-xl-4.per
                    input.form-control(type="number")
                .col-xl-4
                    select.form-control
                        option(value="0") Tháng
                        option(value="0") Năm
            .form-group.row            
                .col-xl-4
                    label Loại hình
                .col-xl-8
                    select.form-control
                        option(value="0") Chọn hình thức
                        option(value="1") Trả lãi hàng tháng
                        option(value="2") Trả lãi cuối kì
            .row
                .col-md-6.m-auto
                    a(type="submit").btn.btn-lg.text-white Xem kết quả
